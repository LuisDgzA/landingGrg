---

const {parrafo} = Astro.props;
---
<div class="container mx-auto mb-20">
    <div class="space-y-4 mb-10">
        <h2 class="text-center text-45 text-redGRG font-bold">¡Impulsa tu carrera!</h2>
        <h2 class="text-center text-30 text-lightGrayGRG font-bold">Contacta a un asesor</h2>
        {
            parrafo && <p class="text-center text-20">para recibir ayuda en tu proceso de inscripción</p>
        }
        
    </div>

    <div class="w-3/4 mx-auto">
        <form class="space-y-6">
            <div class="relative">
                <input type="text" id="nombre" class="floating-input  peer min-h-[4rem]" placeholder=" " />
                <label for="nombre" class="floating-label">Nombre completo</label>
            </div>
            <div class="relative">
                <input type="text" id="correo" class="floating-input  peer min-h-[4rem]" placeholder=" " />
                <label for="correo" class="floating-label">Correo electrónico</label>
            </div>
            <div class="relative">
                <input type="tel" id="telefono" class="floating-input  peer min-h-[4rem]" placeholder=" " />
                <label for="telefono" class="floating-label">Teléfono</label>
            </div>
            <div class="relative">
                <label for="carrera" class="floating-label">Carrera de interes</label>
                <select name="" id="carrera" class="floating-input  peer">
                    <option value="">-- Selecciona una opción --</option>
                </select>
                <!-- <input type="text" id="carrera" class="floating-input  peer" placeholder=" " />
                <label for="carrera" class="floating-label">Teléfono</label> -->
            </div>
            <div class="relative">
                <textarea id="mensaje" class="floating-input  peer p-10" rows="10"></textarea>
                <label for="mensaje" class="floating-label">Mensaje</label>
            </div>
            <div class="w-full flex justify-center ">
                <button class="call-to-actions-secondary uppercase">enviar mensaje</button>

            </div>

        </form>
    </div>
    
</div>
