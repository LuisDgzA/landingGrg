import Topbar from "./Topbar.astro";


---

<section class="hero-container text-white">
    <div class="container mx-auto">
        <Inscripciones client:load/>
        <Topbar/>
        <div class="w-[85%] lg:w-[55%] font-bold flex flex-col gap-[32px] pb-[5rem] md:pb-[8rem] xl:pb-[15rem]">
        
            <h1 class="text-[1.8rem] md:text-[2.2rem] xl:text-[55px] xl:pt-[14rem]">Desarrollamos el máximo potencial de nuestros colaboradores</h1>
