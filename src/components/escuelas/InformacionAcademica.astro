---
import Calendario from '../../assets/icons/Calendario.svg'
import Materias from '../../assets/icons/Materias.svg'
import Modalidad from '../../assets/icons/Modalidad.svg'
const {duracion, materias, modalidad} = Astro.props;
---


<div class="container mx-auto bg-[#f7f7f7] py-12 mt-16 rounded-3xl">
    <h2 class="text-redGRG text-5xl text-center font-semibold mb-10">Información académica</h2>
    <div class="flex flex-col lg:flex-row justify-around gap-10 lg:gap-0">
        <div class="flex flex-col gap-6 items-center lg:flex-row lg:gap-12">
            <span><Calendario/></span>
            <div>
                <p class="text-30 font-semibold text-center lg:text-start">Duración</p>
                <p class="text-20 work">{duracion}</p>
            </div>
        </div>
        <div class="flex flex-col gap-6 items-center lg:flex-row lg:gap-12">
            <span><Materias/></span>
            <div>
                <p class="text-30 font-semibold text-center lg:text-start">Materias</p>
                <p class="text-20 work">20 materia del programa</p>
            </div>
        </div>
        <div class="flex flex-col gap-6 items-center lg:flex-row lg:gap-12">
            <span><Modalidad/></span>
            <div>
                <p class="text-30 font-semibold text-center lg:text-start">Modalidad</p>
                <p class="text-20 work">Virtual con tutor</p>
            </div>
        </div>
    </div>
</div>